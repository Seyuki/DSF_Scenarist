<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ContextMenu x:Key="StoryPathMenu">
        <MenuItem Header="Ouvrir" Command="{Binding OpenCmd}"/>
        <MenuItem Header="Ajouter un level" Command="{Binding AddChildCmd}"/>
        <MenuItem Header="Supprimer" Command="{Binding DeleteCmd}"/>
    </ContextMenu>

    <ContextMenu x:Key="StoryLevelMenu">
        <MenuItem Header="Ouvrir" Command="{Binding OpenCmd}"/>
        <MenuItem Header="Ajouter un block" Command="{Binding AddChildCmd}"/>
        <MenuItem Header="Supprimer" Command="{Binding DeleteCmd}"/>
    </ContextMenu>

    <ContextMenu x:Key="StoryBlockMenu">
        <MenuItem Header="Ouvrir" Command="{Binding OpenCmd}"/>
        <MenuItem Header="Ajouter une action" Command="{Binding AddChildCmd}"/>
        <MenuItem Header="Supprimer" Command="{Binding DeleteCmd}"/>
    </ContextMenu>

    <ContextMenu x:Key="StoryActionMenu">
        <MenuItem Header="Ouvrir" Command="{Binding OpenCmd}"/>
        <MenuItem Header="Supprimer" Command="{Binding DeleteCmd}"/>
    </ContextMenu>

</ResourceDictionary>